#!/bin/sh
#SBATCH --nodes=1
#SBATCH --ntasks-per-node=2
#SBATCH --mem=5gb
#SBATCH --time=00:05:00
#SBATCH --job-name=blast_aa_b2g
#SBATCH --error=blast.aa.b2g.%J.err
#SBATCH --output=blast.aa.b2g.%J.out

module load blast/2.2.29
module load biodata/1.0

cp $BLAST/yeast.aa.* /tmp
cp yeast.aa.b2g.fasta /tmp

blastp -db /tmp/yeast.aa -query /tmp/yeast.aa.b2g.fasta -out /tmp/blast_aa_b2g.xml -outfmt 5 -num_threads $SLURM_NTASKS_PER_NODE
cp /tmp/blast_aa_b2g.xml .
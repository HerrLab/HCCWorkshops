#!/bin/sh
#SBATCH --nodes=1
#SBATCH --ntasks-per-node=2
#SBATCH --mem=5gb
#SBATCH --time=00:10:00
#SBATCH --job-name=blast_nt_multi
#SBATCH --error=blast.nt.multi.%J.err
#SBATCH --output=blast.nt.multi.%J.out
#SBATCH --reservation=unk

module load blast/2.4
module load biodata/1.0

cp $BLAST/nt.00.* /tmp
cp yeast.nt.fasta /tmp

blastn -db /tmp/nt.00 -query /tmp/yeast.nt.fasta -out /tmp/blast_nt_multi.alignments -num_threads $SLURM_NTASKS_PER_NODE
cp /tmp/blast_nt_multi.alignments .
